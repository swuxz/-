#include <stdio.h>
#include <math.h>

int main() {
    double x1, y1, r1, x2, y2, r2;
    double dx, dy;
    double dist_sq;
    double r_sum, r_diff_abs;
    double r_sum_sq, r_diff_sq;

    const double EPS = 1e-9;

    scanf("%lf %lf %lf %lf %lf %lf", &x1, &y1, &r1, &x2, &y2, &r2);

    dx = x2 - x1;
    dy = y2 - y1;
    dist_sq = dx * dx + dy * dy;

    r_sum = r1 + r2;
    r_diff_abs = fabs(r1 - r2);

    r_sum_sq = r_sum * r_sum;
    r_diff_sq = r_diff_abs * r_diff_abs;

    if (fabs(dist_sq) < EPS && fabs(r1 - r2) < EPS) {
        printf("-1\n");
    } else if (dist_sq > r_sum_sq + EPS || dist_sq < r_diff_sq - EPS) {
        printf("0\n");
    } else if (fabs(dist_sq - r_sum_sq) < EPS || fabs(dist_sq - r_diff_sq) < EPS) {
        printf("1\n");
    } else {
        printf("2\n");
    }

    return 0;
}
